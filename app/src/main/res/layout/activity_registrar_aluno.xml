<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp">

    <EditText
        android:id="@+id/etNomeAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etNascimentoAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etNomeAluno"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Data de Nascimento"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerSexoAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etNascimentoAluno"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp" />

    <TextView
        android:id="@+id/tvSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEXO"
        android:layout_alignTop="@+id/etNascimentoAluno"
        android:layout_alignStart="@+id/spinnerSexoAluno" />

    <EditText
        android:id="@+id/etCPFAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etNascimentoAluno"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="CPF"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etRgAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etCPFAluno"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="RG"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEmailAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etRgAluno"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etCelularAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etEmailAluno"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Celular"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerObjetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/etCelularAluno"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etSenhaAluno" />

    <TextView
        android:id="@+id/tvObjetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objetivo"
        android:layout_below="@+id/etCelularAluno"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Salvar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etSenhaAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSalvar"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" />

</RelativeLayout>